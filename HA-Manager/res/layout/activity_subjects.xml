<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/edit_text_subject_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_subject_add"
        android:layout_toRightOf="@+id/text_subject_add"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_subject_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/subject"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button_add_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_subject_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="addSubject"
        android:text="@string/action_add" />

    <ListView
        android:id="@+id/listView_subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add_subject"
        android:layout_marginTop="16dp" >
    </ListView>

</RelativeLayout>
